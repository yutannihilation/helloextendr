LIBDIR = ./rust/target/release
STATLIB = $(LIBDIR)/libhelloextendr.a
PKG_LIBS = -L$(LIBDIR) -lhelloextendr
WRAPPERS_DIR = ./rust/wrappers

all: C_clean

$(SHLIB): $(STATLIB) generate_wrappers

$(STATLIB):
	cargo build --lib --release --manifest-path=./rust/Cargo.toml

generate_wrappers: $(STATLIB)
	mkdir -p $(WRAPPERS_DIR)
	cargo run --quiet --manifest-path=./rust/Cargo.toml --bin generate_wrappers > $(WRAPPERS_DIR)/extendr-wrappers.R

C_clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS)

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS) rust/target
